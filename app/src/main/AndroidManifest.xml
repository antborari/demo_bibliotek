<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javright.bibliotek">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.javright.bibliotek.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.javright.bibliotek.ui.view.MainActivity">
        </activity>
        <activity android:name=".ui.view.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.ScanActivity" >
        </activity>
        <activity android:name=".ui.view.BookActivity" >
        </activity>
        <activity android:name=".ui.view.AddBookActivity" >
        </activity>
    </application>

</manifest>